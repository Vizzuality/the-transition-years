{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "todo",
  "padding": {"left": 40, "top": 40, "right": 120, "bottom": 50},
  "autosize": {"type": "pad", "contains": "padding", "resize": false},
  "signals": [
    {
      "name": "active",
      "value": {},
      "on": [
        {
          "events": "@nodes:mouseover, @nodes:touchstart",
          "update": " item()"
        },
        {"events": "window:mouseout, window:touchend", "update": "{}"}
      ]
    },
    {
      "name": "windowOut",
      "value": "false",
      "on": [
        {"events": "view:mouseout, view:touchend", "update": "true"},
        {"events": "view:mouseover, view:touchstart", "update": "false"}
      ]
    }
  ],
  "data": [
    {
      "name": "table",
      "url": "data/ccdata.json",
      "format": {"type": "json", "property": "data"},
      "transform": [
        {"type": "filter", "expr": "datum.ind == 'temperature'"},
        {"type": "filter", "expr": "datum.year < 2041"},
        {"type": "filter", "expr": "datum.scenario == 'act-Now'"},
        
        {"type": "collect", "sort": {"field": "year"}}
      ]
    },
    {
      "name": "table_1",
      "source": "table",
      "transform": [{"type": "extent", "field": "year", "signal": "xextent"}]
    },
    {
      "name": "fiction",
      "values": [
      ],
      "transform": [
        {
          "type": "lookup",
          "from": "table",
          "key": "year",
          "fields": ["year"],
          "values": ["value", "scenario"],
          "as": ["value", "scenario"],
          "default": null
        },
        {"type": "collect", "sort": {"field": "year"}}
      ]
    }
  ],
  "scales": [
    {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "table", "field": "year"},
      "range": "height",
      "reverse": true,
      "zero": false
    },
    {
      "name": "xscale",
      "domain": {"data": "table", "field": "value"},
      "nice": true,
      "range": "width",
      "zero": false
    },
    {
      "name": "colorC",
      "type": "ordinal",
      "range": "ordinal",
      "domain": {"data": "fiction", "field": "cat"}
    },
    {
      "name": "size",
      "type": "ordinal",
      "round": true,
      "range": [300, 500, 800],
      "domain": {"data": "fiction", "field": "size"}
    }
  ],
  "axes": [
    {"orient": "left", "scale": "yscale", "format": "f"},
    {
      "orient": "top",
      "scale": "xscale",
      "tickCount": 3,
      "title": {
        "signal": "['Temperature change', 'ºC']"
      },
      "encode": {
        "labels": {
          "update": {
            "text": {
              "signal": "if(datum.label,'  +'+datum.label+' ºC','')"
            }
          }
        }
      }
    }
  ],
  "marks": [
    {
      "name": "nodes",
      "type": "symbol",
      "from": {"data": "fiction"},
      "encode": {
        "enter": {
          "fill": {"scale": "colorC", "field": "cat"},
          "size": {"scale": "size", "field": "size"},
          "zindex": {"value": 0}

        },
        "update": {
          "yfocus": {"scale": "yscale", "field": "year"},
          "xfocus": {"scale": "xscale", "field": "value"},
          
          "stroke": {"scale": "colorC", "field": "cat"},
          "strokeWidth": [{"test": "datum.default==true && windowOut","value": 3}, {"value":0}],
          "zindex": {"value": 0}
        },
        "hover": {
          "stroke": {"scale": "colorC", "field": "cat"},
          "strokeWidth": {"value": 3},
          "zindex": {"value": 1}
        }
      },
      "transform": [
        {
          "type": "force",
          "iterations": 500,
          "static": false,
          "restart":true,
          "alpha":0.6,
          "forces": [
            {"force": "collide", "radius": 18},
            {"force": "x", "x": "xfocus", "strength": 0.4},
            {"force": "y", "y": "yfocus", "strength": 0.2},
            {
      "force": "nbody",
      "strength": -10
    }
          ]
        }
      ]
    },
    {
      "type": "rule",
      "name": "line2",
      "from": {"data": "nodes"},
      "encode": {
        "update": {
          "x": {"signal": "datum.x","offset":10},
          "y": {"signal": "datum.y"},
          "x2": {"field": {"group": "width"},"offset":6},
          "strokeWidth": {"value": 1.5},
          "stroke": [
  {
    "test": "datum.datum.default==true && !active.datum && windowOut",
    "scale": "colorC", "signal": "datum.datum.cat"
  },
  {"value": "transparent"}
]
        }
      }
    },
    {
      "type": "text",
      "name": "titles2",
      "interactive": false,
      "from": {"data": "nodes"},
      "encode": {
        "update": {
          "y": {"signal": "datum.y"},
          "x": {"field": {"group": "width"}, "offset":10},
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "lineBreak": {"value": "\n"},
          "text": {"signal": "if(datum.datum.default==true && !active.datum && windowOut,datum.datum.title,'')"},
          "fill": {"value": "grey"}
        }
      }
    },
    {
      "type": "rule",
      "name": "line",
      "encode": {
        "update": {
          "y": {"signal": "active.y"},
          "x": {"signal": "active.x","offset":10},
          "x2": {"field": {"group": "width"},"offset":6},
          "strokeWidth": {"value": 1.5},
          "stroke": [
  {
    "test": "active.datum",
    "scale": "colorC", "signal": "active.datum.cat"
  },
  {"value": "transparent"}
]
        }
      }
    },
    {
      "type": "text",
      "name": "titles",
      "interactive": false,
      "encode": {
        "update": {
          "y": {"signal": "active.y"},
          "x": {"field": {"group": "width"}, "offset":10},
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "lineBreak": {"value": "\n"},
          "text": {"signal": "if(active.datum,active.datum.title,'')"},
          "fill": {"value": "grey"}
        }
      }
    },
    {
      "type": "group",
      "from": {
        "facet": {"name": "series", "data": "table", "groupby": "scenario"}
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "zindex": {"value": 2},
              "x": {"scale": "xscale", "field": "value"},
              "y": {"scale": "yscale", "field": "year"},
              "strokeWidth": {"value": 3}
            }
          }
        }
      ]
    }
  ]
}